<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/timeinput_title"
        android:gravity="center"
        android:text="시간표 입력"
        android:textSize="20dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:text="과목"/>
        <EditText
            android:id="@+id/timeinput_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="배경색"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/timeinput_selected_color"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/timeinput_color0"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color1"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color2"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color3"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color4"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color5"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color6"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color7"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color8"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/timeinput_color9"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <Button
            android:id="@+id/timeinput_positive"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="확인"/>
        <Button
            android:id="@+id/timeinput_delete"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="삭제"/>
        <Button
            android:id="@+id/timeinput_negative"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="취소"/>
    </LinearLayout>

</LinearLayout>
